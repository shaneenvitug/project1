<%= form_for @contact do |f| %>
  <div class="form-group row">
    <%= f.label :name, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :required => true, :autofocus => true, :placeholder => 'Full Name', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :email, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.email_field :email, :required => true, :placeholder => 'email@johndoe.com', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :phone, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone, :required => true, :placeholder => '(+1) 303-287-8812', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :address, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :address, :placeholder => 'Enter the address', :class => "form-control", :row => 3 %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :company, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :company, :placeholder => 'Enter the company name', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :group_id, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <!-- <= f.select :group_id, Group.pluck(:name, :id), :include_blank => true, :class => "form-control" %> -->
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit "Save", :class => "btn btn-info"  %>
      <%= link_to "Cancel", contacts_path, :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
