<%= form_for @contact do |f| %>
  <%= f.label :name, 'Full Name' %>
  <%= f.text_field :name, :required => true, :autofocus => true, :placeholder => 'Full Name' %>

  <%= f.label :email %>
  <%= f.email_field :email, :required => true, :placeholder => 'Email' %>

  <%= f.label :phone %>
  <%= f.telephone_field :phone, :required => true, :placeholder => 'Phone' %>

  <%= f.label :address %>
  <%= f.text_field :address, :placeholder => 'Address' %>

  <%= f.label :company %>
  <%= f.text_field :company, :placeholder => 'Company' %>

  <%= link_to 'Cancel', contacts_path %>
  <%= f.submit %>
<% end %>
