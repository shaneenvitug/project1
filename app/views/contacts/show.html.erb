<nav class="navbar navbar-light bg-light navbar-fixed-top">
  <%= link_to (image_tag("logo.png", :class => "d-inline-block align-top", :width => "34", :height => "34") + "RECONNECT"), root_path, :class => "navbar-brand" %>
    <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Welcome,  <%= @current_user.name %>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to "Logout", login_path, :method => "delete", :class => "dropdown-item" %>
        </div>
      </li>
    </ul>
</nav>



<div class="container">
  <div class="row mt-4">
    <! -- Groups and Favourites -->
    <div class="col-md-3">
      <div class="list-group shadow-sm bg-white rounded">
        <!-- add a plus/add icon to create a group -->
        <div class="btn-group dropright">
          <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Groups
          </button>
          <div class="dropdown-menu">
            <%= link_to "Create new group", new_group_path, :class => "dropdown-item" %>
            <%= link_to "Add new contact", new_contact_path, :class => "dropdown-item" %>
          </div>
        </div>
        <% @groups.each do |group| %>
          <%= link_to group.name, group, :class => "list-group-item" %>
        <% end %>
      </div>
      <!-- to add favourites later -->
    </div>

    <div class="col-md-9 shadow p-3 mb-5 bg-white rounded">
      <div class="contacts-show">
        <div class="row top-heading">
          <div class="col">
            <div class="row">
              <div class="cloudinary">
                <% if @contact.photo.present? %>
                  <%= cl_image_tag(@contact.photo, :class => 'img-circle') %>
                <% end %>
              </div>
              <div class="name m-4">
              <h2><%= @contact.name %></h2>
              </div>
            </div>
          </div>
          <div class="col-md-auto">
          </div>
          <div class="col col-lg-3">
            <div class="row">

              <div class="p-3">
                <%= link_to contacts_path do %>
                  <i class="fas fa-address-book" title="Back to contacts list"></i>
                <% end %>
              </div>

              <div class="p-3">
                <%= link_to edit_contact_path(@contact) do %>
                  <i class="fas fa-edit" title="Edit"></i>
                <% end %>
              </div>

              <div class="p-3">
                <%= link_to @contact, :method => "delete", :data => { :confirm => "Are you sure?" } do %>
                  <i class="fas fa-trash-alt" title="Delete"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <p class="p-2"><strong>Contact Details</strong></p>
        <div class="icon-details p-2">
          <div class="row mb-4">
            <div class="col-1">
              <i class="fas fa-envelope"></i>
            </div>
            <div class="col-11">
              <%= @contact.email %>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-1">
              <i class="fas fa-phone-alt"></i>
            </div>
            <div class="col-11">
              <%= @contact.phone %>
            </div>
          </div>
          <%  if @contact.address.present? %>
          <div class="row mb-4">
            <div class="col-1">
              <i class="fas fa-house-damage"></i>
            </div>
            <div class="col-11">
              <%= @contact.address %>
            </div>
          </div>
          <% end %>
          <% if @contact.company.present? %>
          <div class="row mb-4">
            <div class="col-1">
              <i class="fas fa-building"></i>
            </div>
            <div class="col-11">
              <%= @contact.company %>
            </div>
          </div>
          <% end %>
          <% if @contact.groups.name.present? %>
          <div class="row">
            <div class="col-1">
              <i class="fas fa-users"></i>
            </div>
            <div class="col-11">
              <% @contact.groups.each do |group| %>
                <%= link_to group.name, group %>
              <% end %>
            </div
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
